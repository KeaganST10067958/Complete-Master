<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network for Firebase/Auth/etc. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="Complete"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Complete">

        <!-- Launcher / Splash -->
        <activity
            android:name="com.keagan.complete.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Complete">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.keagan.complete.ui.quote.QuoteSplashActivity" />


        <!-- Login (fix: correct package path) -->
        <activity
            android:name="com.keagan.complete.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Register (use the auth package if your RegisterActivity is there) -->
        <activity
            android:name="com.keagan.complete.ui.RegisterActivity"
            android:exported="false" />

        <!-- Main host activity -->
        <activity
            android:name="com.keagan.complete.ui.MainActivity"
            android:exported="false" />

    </application>
</manifest>
