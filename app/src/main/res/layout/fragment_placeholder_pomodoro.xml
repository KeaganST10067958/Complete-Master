<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/titlePomodoro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pomodoro"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Glass tile (timer goes inside this) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/glassTile"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeColor="@color/glass_80"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/titlePomodoro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glass background + inner sheen -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_glass_card"
            android:padding="18dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card" />

            <!-- TIMER is inside the glass tile now -->
            <TextView
                android:id="@+id/textTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:25:00"
                android:textSize="34sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:textColor="@color/onSurface"
                android:shadowColor="#33FFFFFF"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="6" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Pickers -->
    <LinearLayout
        android:id="@+id/pickersRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/glassTile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <NumberPicker
            android:id="@+id/pickerHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <NumberPicker
            android:id="@+id/pickerMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <NumberPicker
            android:id="@+id/pickerSeconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:id="@+id/controlsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pickersRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:text="Play"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_secondary_button"
            android:text="Reset"
            android:textColor="#CC2B2B2B" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
