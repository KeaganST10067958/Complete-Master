<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_pastel_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Daily quote (no refresh) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/glass_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Small progress is still progress.”"
                    android:textSize="18sp"
                    android:textColor="@color/onSurface"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="— PlanDemic"
                    android:textSize="13sp"
                    android:textColor="#99000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Daily streak -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/glass_stroke"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily streak"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface" />

                <TextView
                    android:id="@+id/tvStreakCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Check in for today"
                    android:textAllCaps="false"
                    app:cornerRadius="22dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/onPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
