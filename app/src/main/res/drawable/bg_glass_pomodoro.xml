<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- outer frosted panel -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <!-- subtle frosted gradient -->
            <gradient
                android:angle="315"
                android:startColor="#22FFFFFF"
                android:centerColor="#11FFFFFF"
                android:endColor="#22FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="@color/glass_stroke"/>
        </shape>
    </item>

    <!-- inset soft fog -->
    <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <gradient
                android:angle="315"
                android:startColor="#14FFFFFF"
                android:endColor="#0AFFFFFF"/>
        </shape>
    </item>

    <!-- glossy top highlight -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:angle="180"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
