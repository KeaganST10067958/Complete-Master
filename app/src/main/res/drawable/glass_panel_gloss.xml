<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base translucent “glass” -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#CCFFFFFF"/>
            <stroke android:width="1dp" android:color="#33FFFFFF"/>
        </shape>
    </item>

    <!-- Soft inner gradient vignette (very subtle) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="50%"
                android:centerY="40%"
                android:startColor="#0D000000"
            android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Top glossy highlight strip -->
    <item android:bottom="72dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:angle="90"
                android:type="linear"
                android:startColor="#40FFFFFF"
            android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
